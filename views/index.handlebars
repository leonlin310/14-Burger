





<h1>Burgers!</h1>

<h2>Burgers that are ready to be eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <div class="form-group" id = "hideDiv">
    <label for="slee">Eaten?</label><br>
    <input type="radio" name="eaten" value="0" checked> Eaten!<br>
    <input type="radio" name="eaten" value="1"> NotEaten
  </div>

  <button type="submit">Add Burger</button>
</form>

<script>
  $("#hideDiv").hide();
</script>